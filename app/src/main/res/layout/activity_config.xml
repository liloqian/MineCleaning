<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray">

    <include layout="@layout/toolbar" />

    <TextView
        android:textSize="24sp"
        android:gravity="center"
        android:text="配置游戏参数"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:padding="10dp"
            android:id="@+id/tv_set_gridNumbers"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="游戏网格大小："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="18sp"
            android:background="@drawable/orange_button"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_set_gridNumbers"
            android:id="@+id/btn_set_gridNumbers"
            android:text="10x10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="10dp"
            android:text="游戏地雷数目:"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_below="@id/tv_set_gridNumbers"
            android:id="@+id/tv_set_mineNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="18sp"
            android:text="简单"
            android:layout_below="@id/btn_set_gridNumbers"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="40dp"
            android:layout_toRightOf="@id/tv_set_mineNumbers"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_set_mineNumbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />w
    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <Button
            android:id="@+id/btn_setCancel"
            android:text="取消"
            android:background="@drawable/orange_button"
            android:layout_marginLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:background="@drawable/orange_button"
            android:id="@+id/btn_setOk"
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>